{
	"name": "journal-chatbot-core",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun run --watch src/index.ts",
		"dev:container": "nodemon --watch src --ext tsx,ts,js,html,css --exec 'bun src/index.ts'",
