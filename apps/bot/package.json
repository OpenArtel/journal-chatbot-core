	},
	"devDependencies": {
		"@types/bun": "latest",
		"kysely-codegen": "^0.19.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@grammyjs/ratelimiter": "^1.2.1",
		"@mastra/client-js": "^0.16.15",
		"grammy": "^1.38.4",
		"kysely": "^0.28.8",
		"pg": "^8.16.3",
		"pg-boss": "^12.5.2",
		"zod": "^4.1.13"
	}
}
